{
  "scripts": {
    "start": "concurrently \"npm run start-frontend\" \"npm run start-backend\"",
    "start-frontend": "cd frontend && npm start",
    "start-backend": "cd backend && json-server --watch db.json --port 5000",
    "dev": "concurrently \"cd frontend && npm run dev\" \"cd backend && json-server --watch db.json --port 5000\""
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/styled-components": "^5.1.34",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "http-server": "^14.1.1",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "@svgr/webpack": "^8.1.0",
    "react": "^18.3.1",
    "react-icons": "^5.3.0",
    "styled-components": "^6.1.13"
  }
}
