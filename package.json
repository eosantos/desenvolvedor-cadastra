{
  "scripts": {
    "start": "concurrently \"npm run start-frontend\" \"npm run start-backend\"",
    "start-frontend": "cd frontend && npm start",
    "start-backend": "cd backend && json-server --watch db.json --port 5000",
    "dev": "concurrently \"cd frontend && npm run dev\" \"cd backend && npx json-server --watch db.json --port 5000\""
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "@svgr/webpack": "^8.1.0",
    "react-icons": "^5.3.0"
  }
}
